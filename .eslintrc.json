{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "react-app/jest",
        "airbnb",
        "plugin:prettier/recommened"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "quotes": [
            "error",
            "double",
            {
                "avoidescape": true
            }
        ],
        "react/jsx-uses-react": ["off"],
        "react/react-in-jsx-scope": ["off"],
        "react/jsx-props-no=spreading": ["warn"],
        "no-shadow": "off"
    }
}
